{
	"compilerOptions": {
		"target": "ES2022",
		"lib": [
			"ES2024",
			"DOM"
		],
		"module": "commonjs",
		"declaration": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"strict": true,
		"useUnknownInCatchVariables": false,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules"
	]
}